/****Custom Radio | Checkbox ****/
.radio {
  width: 24%;
  display: inline-block;
}

.checkbox {
  display: inline-block;
}

.radio,
.checkbox{
  cursor: pointer;
  user-select: none;
  -webkit-user-select: none;
  -webkit-touch-callout: none;
}
.radio input[type=radio],
.checkbox input[type=checkbox]{ /* HIDE ORG RADIO & CHECKBOX */
  visibility: hidden;
  position: absolute;
}

/* RADIO & CHECKBOX STYLES */
.radio i,
.checkbox i{     /* DEFAULT <i> STYLE */
  display: inline-block;
  vertical-align: middle;
  width:  20px;
  height: 20px;
  border: 2px solid #b2b2b2;
  background: #f6f6f6;
  float: left;
  margin: 0 10px 0 0;
  position: relative;
  bottom: 2px;

  -webkit-box-shadow:inset 0 0 0 8px #f6f6f6;
  box-shadow:inset 0 0 0 8px #f6f6f6;

  -webkit-border-radius: 50%;
  border-radius: 50%;

  -webkit-transition: 0.2s;
  -moz-transition: 0.2s;
  -ms-transition: 0.2s;
  -o-transition: 0.2s;
  transition: 0.2s;
}

/* CHECKBOX OVERWRITE STYLES */
.checkbox i {
  -webkit-border-radius: 0%;
  border-radius: 0%;
}
.radio:hover i, .checkbox:hover i { /* HOVER <i> STYLE */
  box-shadow: inset 0 0 0 3px #f6f6f6;
  background: #b2b2b2;
}
.radio input:checked + i{ /* (RADIO CHECKED) <i> STYLE */
  box-shadow: inset 0 0 0 3px #f6f6f6;
  background: #cdb87d;
}
/* CHECKBOX */
.checkbox input:checked + i{ /* (RADIO CHECKED) <i> STYLE */
  box-shadow: inset 0 0 0 3px #f6f6f6;
  background: #cdb87d;
}

